#include <iostream>
#include <bits/stdc++.h>
#include <string>
using namespace std;

int main(){
    int t;
    cin>>t;

    while(t--){
        int n;
        int k;
        cin>>n>>k;
        vector<int> lst(n);
        for(int i=0;i<n;i++){
            cin>>lst[i];
        }
        int a=0;
        int b=0;
        for(int i=0;i<n-1;i++){
            a=lst[i+1]-lst[i];
            if(b<a){
                b=a;
            }
        }
        int start=lst[0]-0;
        int end=(k-lst[n-1])*2;

        int final=max(start,max(end,b));
        printf("%d",final);
        printf("\n");




    }
}
