#include <iostream>
#include <bits/stdc++.h>
#include <string>
using namespace std;

int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        string s;
        cin>>n;
        cin>>s;
        int count =0;
        int conseq=0;
        int answer=0;
        for(int i=0;i<n;i++){
            char ch=s[i];
            if(ch=='#'){
                conseq=0;
                continue;

            }
            else{
                conseq+=1;
                count+=1;
            }
            if(conseq>=3){
                answer=2;
                break;
            }
            else{
                answer=count;
            }


        }
        printf("%d \n",answer);
        
    }
}
