class Solution {
public:
    int numberOfSubstrings(string s) {

        vector<int> check1={-1,-1,-1};
        int count=0;
        int size=s.size();

        for(int i=0;i<size;i++){
            check1[s[i]-'a']=i;

            if(check1[0]!=-1 && check1[1]!=-1 && check1[2]!=-1){
                count=count+(1+min(check1[0],min(check1[1],check1[2])));
            
            
            }
        }
        return count;
    }
};
