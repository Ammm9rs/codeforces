#include <iostream>
#include <bits/stdc++.h>
#include <string>
using namespace std;


int main(){
    int t;
    cin>>t;
    bool fact;

    while (t--){
        int n,k;
        cin>>n>>k;
        vector<int> arr(n);
        for(int i=0;i<n;i++){
            cin>>arr[i];
        }
        if(k>=2){
            printf("YES");
            printf("\n");
        }
        else{
            for(int i=0;i<n-1;i++){
                if(arr[i]<=arr[i+1]){
                    
                    fact=true;

                }
                else{
                    fact=false;
                    break;
                }

            }
            if(fact==false){
                printf("NO");
                printf("\n");

                
            }
            else{
                printf("YES");
                printf("\n");

            }


        }


    }



}
